.border-line
    position absolute
    z-index 13

.border-line-top
    top 0
    left 0
    right 0
    height 1px

.border-line-left
    top 0
    bottom 0
    left 0
    width 1px

.border-line-right
    top 0
    bottom 0
    right 0
    width 1px

.border-line-bottom
    bottom 0
    left 0
    right 17px
    height 1px

.no-scroll-x .border-line-bottom,
.no-scroll-y .border-line-bottom
    right 0

.content-area
    position relative
    border-style solid
    border-width 0 0 1px

    &.no-scroll-x
        border-bottom-width 0

.head-area
    border-style solid
    border-width 0 0 1px
    position relative
    overflow hidden

    .cell-head
        border-top-width 1px
        border-bottom-width 1px

.body-area
    border-style solid
    border-width 0
    position relative
    overflow scroll

.summary-area
    position relative
    border-style solid
    overflow-y hidden
    overflow-x scroll

.summary-area-top
    border-width 0 0 1px;
    margin-top 0

.summary-area-bottom
    border-width 1px 0 0
    margin-top -18px

.lside-area
    display none
    position absolute
    top 0
    left 0
    overflow hidden
    z-index 10

    .body-area
        margin-right -17px

        .selection-layer
            left 1px

.rside-area
    display none
    overflow hidden

    tr
        th:first-child, td:first-child
            border-left-width 0

    .head-area, .summary-area
        margin-right 17px

    .frozen-border-top
        position absolute
        top 0

        .column-resize-handle
            top 0
    .frozen-border-bottom
        position absolute
        bottom 0
        height 17px

.no-scroll-y
    .rside-area
        .head-area, .summary-area
            margin-right 0

.no-scroll-x
    .summary-area
        margin-top 0
        overflow-x hidden
    .summary-area-right
        bottom 0

.summary-area-right
    position absolute
    right 0
    width 17px
    border-style solid

.summary-area-right-top
    border-width 0 0 1px 1px

.summary-area-right-bottom
    border-width 1px 0 0 1px

.body-container
    position relative
    margin-top -1px

.table-container
    position absolute

.scrollbar-head
    display block
    position absolute
    top 0
    right 0
    width 16px
    border-style solid
    border-width 1px

.scrollbar-left-bottom
    position absolute
    bottom 0
    left 0
    right 0
    height 17px

.scrollbar-right-bottom
    position absolute
    bottom 0
    right 0
    width 17px
    height 17px

.scrollbar-border
    display block
    position absolute
    right 17px
    width 1px

.height-resize-handle
    overflow hidden
    background-color #f5f5f5
    cursor row-resize
    height 11px
    border-style solid
    border-width 0 1px 1px
    font-size 0
    text-align center

    button
        display block
        width 100%
        cursor row-resize
        padding 0
        margin 0
        outline 0
        border 0
        background-color #f5f5f5

        span
            background url(../../images/icons.gif) no-repeat -70px -60px
            display inline-block
            width 17px
            height 9px
            margin-top 3px
